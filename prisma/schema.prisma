generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model alarmsByDate {
  id  Int    @id @default(autoincrement())
  h   Int
  min Int
  s   Int
  r   String

  d Int
  m Int
  y Int

  c String
}

model alarmsByWeek {
  id  Int    @id @default(autoincrement())
  h   Int
  min Int
  s   Int
  r   String

  w Int[]

  c String
}

model ringtones {
  name String @id
  tone String
}
