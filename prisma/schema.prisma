generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model alarmsByDate {
  id       Int    @id @default(autoincrement())
  hour     Int
  minute   Int
  seconds  Int
  ringtone String

  day   Int
  month Int
  year  Int

  color String
}

model alarmsByWeek {
  id       Int    @id @default(autoincrement())
  hour     Int
  minute   Int
  seconds  Int
  ringtone String

  weekDay Int

  color String
}

model ringtones {
  name String @id
  tone String
}
